@{
    ViewBag.Title = "Thought";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    @model m2ostnext.Models.Greeting
    List<m2ostnext.Models.Greeting> GreetingModelList = (List<m2ostnext.Models.Greeting>)ViewData["GreetingModelList"];

}

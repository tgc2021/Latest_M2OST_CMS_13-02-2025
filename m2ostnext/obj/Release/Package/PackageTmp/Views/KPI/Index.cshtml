
@{
    ViewBag.Title = "Group Dashboard";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
}


<link rel="stylesheet" href="~/Content/datatable/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="~/Content/datatable/css/dataTables.bootstrap.min.css" />
<script type="text/javascript" src="~/Content/datatable/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
        $("#report-table").dataTable();
    });
</script>

@{
    List<m2ostnext.Models.tbl_kpi_master_details> master = (List<m2ostnext.Models.tbl_kpi_master_details>)ViewData["master"];
}
<div class="row clearfix">
    <div class="col-md-12 column">

        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4 class="panel-title">KPI Dashboard</h4>
            </div>
            <div class="panel-body">
                <a class="btn btn-primary btn-default pull-right" href="@Url.Action("AddKPINEW", "KPI")"> + Add KPI  </a>
                &nbsp;<br /><br />
                <hr />
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="45%">
                                KPI Name
                            </th>
                            <th width="15%">
                                KPI Sub_Type
                            </th>
                            
                            <th width="10%">
                                KPI Type
                            </th>
                            @*<th width="10%">

                            </th>*@
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (m2ostnext.Models.tbl_kpi_master_details item in master)
                        {
                            <tr>
                                <td>
                                    @item.KPI_Name
                                </td>
                                <td>
                                    @item.KPI_SubType

                                </td>
                             
                                <td>
                                    @if (item.KPI_Type == 3)
                                    {
                                       <label>KPI</label>
                                    }
                                    else if (item.KPI_Type == 1)
                                    {
                                        <label>KPI for Content</label>
                                    }
                                    else if (item.KPI_Type == 2)
                                    {
                                        <label>KPI for Assessment</label>
                                    }
                                </td>
                                @*<td>
                                    <a href="@Url.Action("KPIGrid", "KPI", new { kpid=item.ID_KPI,flag=0})"><i class="glyphicon glyphicon-folder-open"></i></a>
                                </td>*@                               
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

    .file-label {
        display: inline-block;
        padding: 0px 12px;
        color: #fff;
        border-radius: 4px;
        cursor: pointer;
        color: #616161;
        text-align: center;
        font-family: Lato;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 175%;
        height: 35px;
        border-radius: 0px 3px 3px 0px;
        background: #F3F3F3;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);

<style>
    div.dataTables_wrapper {
        width: 100%;
        margin: 0 auto;
    }



    .switch {
        display: inline-block;
        height: 24px;
        position: relative;
        width: 50px;
    }

        .switch input {
            display: none;
        }

    .slider {
        background-color: #ccc;
        bottom: 0;
        cursor: pointer;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        transition: .4s;
    }

        .slider:before {
            background-color: #808192;
            bottom: 3px;
            content: "";
            height: 18px;
            left: 4px;
            position: absolute;
            transition: .4s;
            width: 18px;
        }

    input:checked + .slider {
        background-color: #5AEF9F;
    }

        input:checked + .slider:before {
            transform: translateX(22px);
            background-color: #FFF;
        }

    .slider.round {
        border-radius: 30px;
    }

        .slider.round:before {
            border-radius: 50%;
        }
</style>


@{

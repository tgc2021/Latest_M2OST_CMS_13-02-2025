@{
    ViewBag.Title = "N-Gage Content";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    @model m2ostnext.Controllers.N_Gage_OrganizationController.tbl_org_mapping
    var OrgIDList = ViewBag.OrgIDList as List<SelectListItem>;
}

@using (Html.BeginForm("SaveConfiguration", "N_Gage_Organization", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    else if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="form-group" id="div-ans-display">
        <div class="col-md-2">
            <label class="control-label">Select Organization From Ngage</label>
        </div>
        <div class="col-md-5">
            @Html.DropDownList("SelectedOrgID", OrgIDList, "Select Organization", new { @class = "form-control kip1", id = "Idorg" })
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-12 d-flex justify-content-end">
            <a href="@Url.Action("N_GageIndex", "N_Gage_Organization")" class="btn btn-default" style="padding:2px 10px;margin-right:5px;width:10%;">Cancel</a>
            <input type="submit" class="btn btn-default" style="padding:2px 10px;margin-right:5px;width:10%;" value="Save" />
        </div>
    </div>
}

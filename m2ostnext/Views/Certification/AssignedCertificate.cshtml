
@{
    ViewBag.Title = "AssignedCertificate";
    Layout = "~/Views/Shared/_cms_Layout.cshtml";
    List<m2ostnext.tbl_certificate_assignment> assign = (List<m2ostnext.tbl_certificate_assignment>)ViewData["Assign"];

}



<link rel="stylesheet" href="~/Content/fancybox/source/jquery.fancybox.css?v=2.1.5" type="text/css" media="screen" />
<script type="text/javascript" src="~/Content/fancybox/source/jquery.fancybox.pack.js?v=2.1.5"></script>

<link rel="stylesheet" href="~/Content/fancybox/source/helpers/jquery.fancybox-thumbs.css?v=1.0.7" type="text/css" media="screen" />
<script type="text/javascript" src="~/Content/fancybox/source/helpers/jquery.fancybox-thumbs.js?v=1.0.7"></script>

<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="panel panel-default custom-panel">
            <div class="panel-heading custom-panel-heading">

                <div class="panel-title">Certificate assigned assessments</div>

            </div>
            <div class="panel-body">
                <table id="report-table" class="table table-striped table-bordered dataTable small" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="10%">
                                Certificate Id
                            </th>
                            <th width="30%">
                                Assessment Title
                            </th>
                            <th width="30%">
                                Certificate Title
                            </th>
                            <th width="10%">
                                Edit
                            </th>
                            <th width="10%">
                                Delete
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in assign)
                        {
                        <tr>
                            <td>
                                @item.id_certificate_assignment
                            </td>
                            <td>
                                @item.assessment_title
                            </td>
                            <td>
                                @item.certificate_title
                            </td>
                            <td>
                                <a href=""><i class="glyphicon glyphicon-edit"></i></a>
                            </td>
                            <td>
                                <a href="@Url.Action("RemoveCertificate","Certification",new {id=item.id_certificate_assignment })"><i class="glyphicon glyphicon-remove"></i></a>
                            </td>
                        </tr>

                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>



